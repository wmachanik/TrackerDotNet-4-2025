<!-- Migration 001: Add InternalCustomerIds field to SysDataTbl -->
<!-- Date: 2025-01-21 -->
<!-- Author: Warren -->
<!-- Purpose: Store comma-separated list of internal customer IDs to exclude from coffee checkup -->
<root>
  <!-- Step 1: Add the new column to SysDataTbl -->
  <command type="update">
    ALTER TABLE SysDataTbl ADD COLUMN InternalCustomerIds TEXT(255)
  </command>
  
  <!-- Step 2: Set initial value for existing system record -->
  <command type="update">
    UPDATE SysDataTbl SET InternalCustomerIds = '103' WHERE ID = 1
  </command>
  
  <!-- Step 3: Verify the column was added -->
  <command type="select">
    SELECT ID, MinReminderDate, GroupItemTypeID, InternalCustomerIds FROM SysDataTbl WHERE ID = 1
  </command>
  
  <!-- Step 4: Show all SysDataTbl structure to confirm -->
  <command type="select">
    SELECT * FROM SysDataTbl
  </command>
</root>